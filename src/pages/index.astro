---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION, TWITTER, GITHUB, LINKEDIN } from "../config";
import Project from "../components/Project.astro";

type PinnedRepo = {
  owner: string;
  repo: string;
  description: string;
  language: string;
  languageColor: string;
  stars: number;
  forks: string;
};

const pinnedRepos = await fetch("https://gh-pinned-repos.egoist.dev/?username=chrisrusselljr").then(
  async (response) => {
    return (await response.json()) as PinnedRepo[];
  }
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} home`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main class="text-lg text-neutral-200">
      <div class="flex justify-evenly">
        <picture data-animate style="--stagger:1">
          <source srcset="/images/hero.avif" type="image/avif" class="rounded-full m-3 w-3/4 mx-auto" />
          <source srcset="/images/hero.webp" type="image/webp" class="rounded-full m-3 w-3/4 mx-auto" />
          <img src="/images/hero.jpeg" class="rounded-full m-3 w-3/4 mx-auto" alt="hero-image" />
        </picture>
      </div>

      <h1 data-animate style="--stagger:2" class="text-4xl pb-2 mt-4">Hi, I'm Chris</h1>
      <br />

      <p data-animate style="--stagger:2">
        I'm a <b>Software Enginer</b>, <b>Mechanical Engineer</b>, and <b>Supply Chain Expert</b> with a decade of experience.
        I'm currently working at <a
          href="https://www.spacex.com/"
          data-splitbee-event="Visit SpaceX"
          data-splitbee-event-linkType="Body"
          target="_blank">SpaceX</a
        >, enhancing our supply chain systems.
      </p>

      <br />
      <p data-animate style="--stagger:2">
        In my free time, you can find me learing web development, catching splat points at Orangetheory, or producing <a
          href="https://soundcloud.com/crussell"
          data-splitbee-event="Visit Soundcloud"
          data-splitbee-event-linkType="Body"
          target="_blank">house music</a
        >. I also enjoy <a href="/blog">writing</a>, reading, and photography.
      </p>

      <br />
      Feel free to stop by and sign my <a href="/guestbook">guestbook</a>!
